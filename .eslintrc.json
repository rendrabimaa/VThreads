{
    "env": {
        "browser": true,
        "es2021": true,
        "cypress/globals": true
    },
    "plugins": [
      "react",
      "react-hooks",
      "cypress"
    ],
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "linebreak-style": 0,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never"
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "max-len": ["error", { "code": 1000 }],
      "no-alert": "off",
      "no-underscore-dangle": "off"
    }
}
